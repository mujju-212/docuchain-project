# DocuChain Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Pinata IPFS Configuration
# Get these from https://app.pinata.cloud/developers/api-keys
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here

# Flask Configuration
FLASK_SECRET_KEY=your_secret_key_change_this_in_production
FLASK_DEBUG=True

# Database Configuration (Optional - SQLite is used by default)
DATABASE_URL=sqlite:///database.db

# Blockchain Configuration
# Contract Address on Sepolia Testnet
CONTRACT_ADDRESS=0x1203dc6f5d10556449e194c0c14f167bb3d72208
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
CHAIN_ID=11155111

# Security Settings
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# Instructions:
# 1. Rename this file to .env
# 2. Replace all placeholder values with your actual credentials
